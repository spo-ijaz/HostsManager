<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1/policyconfig.dtd">
<policyconfig>
  <vendor>spo-ijaz</vendor>
  <action id="org.gnome.gitlab.spo-ijaz.hostsmanager">
    <message>Authentication is required to save changes in /etc/hosts.</message>
    <icon_name>org.gnome.gitlab.spo-ijaz.hostsmanager</icon_name>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin</allow_active>
    </defaults>
    <annotate key="org.freedesktop.policykit.exec.path">/usr/bin/org.gnome.gitlab.spo-ijaz.hostsmanager.app</annotate>
    <annotate key="org.freedesktop.policykit.exec.allow_gui">true</annotate>
  </action>
</policyconfig>
